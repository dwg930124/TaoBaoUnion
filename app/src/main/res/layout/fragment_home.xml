<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/home_text_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/home_scan_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/scan"/>

        <EditText
            android:id="@+id/home_edit_box"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/shape_edit_box_bg"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/home_text_tip"
            android:layout_toLeftOf="@id/home_scan_icon"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:hint="@string/text_search_tips"
            android:paddingLeft="5dp"
            android:focusable="false"/>

    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/home_indicator"
        android:layout_width="match_parent"
        app:tabMode="scrollable"
        app:tabBackground="@color/colorPrimary"
        app:tabSelectedTextColor="@color/colorTabSelected"
        app:tabTextColor="@color/colorTabNormal"
        app:tabRippleColor="@color/colorTabNormal"
        app:tabIndicatorColor="@color/colorTabNormal"
        android:layout_height="@dimen/dp_30"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/home_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"/>

</LinearLayout>